<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#c8daea"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <!-- Include Action Bar -->

    <include layout="@layout/actionbar_layout" />

    <!-- Sample Dashboard screen with Two buttons -->

    <Button
        android:id="@+id/btnViewProducts"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:text="View Customers"
        android:textColor="#1428ea"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btnCreateProduct"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:text="Add New Customers"
        android:textColor="#1428ea"
        tools:ignore="HardcodedText" />

</LinearLayout>